<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:HapticLibrary.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 x:DataType="vm:ReadingPageViewModel"
             x:Class="HapticLibrary.Views.ReadingPageView">
	<StackPanel
		HorizontalAlignment="Center">
		<TextBlock Text="This is the Reading Page" 
				   HorizontalAlignment="Center"/>
		<Image Source="avares://HapticLibrary/Assets/temp-reading-image.jpg"
			   Width="120"
			   Height="120"
			   HorizontalAlignment="Center"
			   Margin="0, 20, 0, 20"/>
		<TextBlock Text="{Binding BookLine}"
				   HorizontalAlignment="Center"
				   Height="200"/>
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			<Button Grid.Column="0"
				Command="{Binding PreviousPage}">
				Previous Page
			</Button>
			<Panel Grid.Column="1"
				Width="300">
				<Button 
				HorizontalAlignment="Center"
				Command="{Binding ToggleMicrophone}"
				Content="{Binding RecordingToggleText}"/>
				</Panel>
			<Button Grid.Column="2"
				Command="{Binding NextPage}">
				Next Page
			</Button>
		</Grid>
	</StackPanel>
</UserControl>
