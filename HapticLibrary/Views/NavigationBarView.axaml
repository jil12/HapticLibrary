<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:HapticLibrary.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="HapticLibrary.Views.NavigationBarView"
			 x:DataType="vm:NavigationBarViewModel">
	
	<Border Background="White" 
	        BorderBrush="#F0F0F0" 
	        BorderThickness="0,1,0,0" 
	        Padding="20,12,20,12">
		
		<Grid>
			<Grid.ColumnDefinitions>
				<ColumnDefinition Width="*"/>
				<ColumnDefinition Width="Auto"/>
				<ColumnDefinition Width="*"/>
			</Grid.ColumnDefinitions>
			
			<!-- Centered Navigation Buttons Container -->
			<StackPanel Grid.Column="1" 
			           Orientation="Horizontal" 
			           Spacing="40"
			           HorizontalAlignment="Center">
				
				<!-- Library Button -->
				<Button Command="{Binding NavigateToLibraryPageCommand}"
				        Classes="nav-button">
					<StackPanel Orientation="Vertical" Spacing="6">
						<Border CornerRadius="12" 
						        Width="24" 
						        Height="24"
						        HorizontalAlignment="Center"
						        Background="{Binding IsLibrarySelected, Converter={x:Static vm:NavigationIconConverter.Instance}}">
							<TextBlock FontFamily="Segoe MDL2 Assets" 
							          Text="&#xE8F1;" 
							          FontSize="12"
							          Foreground="White"
							          HorizontalAlignment="Center"
							          VerticalAlignment="Center"/>
						</Border>
						<TextBlock Text="Library" 
						          FontSize="11"
						          FontWeight="Medium"
						          HorizontalAlignment="Center"
						          Foreground="{Binding IsLibrarySelected, Converter={x:Static vm:NavigationTextConverter.Instance}}"/>
					</StackPanel>
				</Button>
				
				<!-- Reading Button -->
				<Button Command="{Binding NavigateToReadingPageCommand}"
				        Classes="nav-button">
					<StackPanel Orientation="Vertical" Spacing="6">
						<Border CornerRadius="12" 
						        Width="24" 
						        Height="24"
						        HorizontalAlignment="Center"
						        Background="{Binding IsReadingSelected, Converter={x:Static vm:NavigationIconConverter.Instance}}">
							<TextBlock FontFamily="Segoe MDL2 Assets" 
							          Text="&#xE8A5;" 
							          FontSize="12"
							          Foreground="White"
							          HorizontalAlignment="Center"
							          VerticalAlignment="Center"/>
						</Border>
						<TextBlock Text="Reading" 
						          FontSize="11"
						          FontWeight="Medium"
						          HorizontalAlignment="Center"
						          Foreground="{Binding IsReadingSelected, Converter={x:Static vm:NavigationTextConverter.Instance}}"/>
					</StackPanel>
				</Button>
				
				<!-- Editor Button -->
				<Button Command="{Binding NavigateToSettingsPageCommand}"
				        Classes="nav-button">
					<StackPanel Orientation="Vertical" Spacing="6">
						<Border CornerRadius="12" 
						        Width="24" 
						        Height="24"
						        HorizontalAlignment="Center"
						        Background="{Binding IsSettingsSelected, Converter={x:Static vm:NavigationIconConverter.Instance}}">
							<TextBlock FontFamily="Segoe MDL2 Assets" 
							          Text="&#xE70F;" 
							          FontSize="12"
							          Foreground="White"
							          HorizontalAlignment="Center"
							          VerticalAlignment="Center"/>
						</Border>
						<TextBlock Text="Editor" 
						          FontSize="11"
						          FontWeight="Medium"
						          HorizontalAlignment="Center"
						          Foreground="{Binding IsSettingsSelected, Converter={x:Static vm:NavigationTextConverter.Instance}}"/>
					</StackPanel>
				</Button>
			</StackPanel>
		</Grid>
	</Border>
	
	<UserControl.Styles>
		<Style Selector="Button.nav-button">
			<Setter Property="Background" Value="Transparent"/>
			<Setter Property="BorderThickness" Value="0"/>
			<Setter Property="Padding" Value="12,8"/>
			<Setter Property="HorizontalContentAlignment" Value="Center"/>
			<Setter Property="VerticalContentAlignment" Value="Center"/>
		</Style>
		<Style Selector="Button.nav-button:pointerover">
			<Setter Property="Background" Value="Transparent"/>
		</Style>
		<Style Selector="Button.nav-button:pressed">
			<Setter Property="Background" Value="#F8F8F8"/>
		</Style>
	</UserControl.Styles>
</UserControl>
