<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 xmlns:vm="using:HapticLibrary.ViewModels"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 x:DataType="vm:SettingsPageViewModel"
             x:Class="HapticLibrary.Views.SettingsPageView">
	<StackPanel>
		<TextBlock Text="This is the Settings Page" />
		<Image Source="avares://HapticLibrary/Assets/temp-settings-image.png"
			   Width="120"
			   Height="120"
			   HorizontalAlignment="Left"
			   Margin="20, 0, 0, 0"/>
		<Button Command="{Binding TempButton}" Classes="text-btn">
			This is a temporary button for testing.
		</Button>
	</StackPanel>
</UserControl>
